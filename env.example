# AI Finance Tracker - Environment Variables Template
# Copy this file to server/.env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=Cluster0

# JWT
JWT_SECRET=your_jwt_secret_key_here

# Nordigen
NORDIGEN_SECRET_ID=your_nordigen_secret_id
NORDIGEN_SECRET_KEY=your_nordigen_secret_key
NORDIGEN_ACCESS_TOKEN=your_nordigen_access_token

# OPENROUTER
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Email Configuration (Gmail SMTP)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Client
FRONTEND_URL=https://your-frontend-domain.vercel.app

# Stripe
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
STRIPE_PRICE_PRO_MONTHLY=your_monthly_price_id_here
STRIPE_PRICE_PRO_YEARLY=your_yearly_price_id_here
